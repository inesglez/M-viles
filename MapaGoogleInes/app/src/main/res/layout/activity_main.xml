<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fragmento del mapa -->
    <fragment
        android:id="@+id/miMapa"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Campo de búsqueda -->
    <EditText
        android:id="@+id/busqueda"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Buscar ubicación"
        android:background="@android:drawable/edit_text" />

    <!-- Botón para buscar ubicación -->
    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/busqueda"
        android:layout_centerHorizontal="true"
        android:text="Buscar" />

    <!-- Botón para cambiar el tipo de mapa -->
    <Button
        android:id="@+id/cambiarMapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBuscar"
        android:layout_centerHorizontal="true"
        android:text="Cambiar mapa" />
</RelativeLayout>
