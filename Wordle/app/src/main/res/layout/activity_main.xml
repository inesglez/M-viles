<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f8f4fc">

    <!-- Título -->

    <!-- Cuadrícula para las letras -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/comicate"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="WORDLE"
        android:textColor="#4CAF50"
        android:textSize="65sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/cuadrillaLetras"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="5"
        android:rowCount="6"
        android:layout_marginVertical="34dp"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/teclado"
        app:layout_constraintVertical_bias="0"
        app:layout_goneMarginBottom="16dp" />


    <!-- Teclado de letras -->
    <LinearLayout
        android:id="@+id/teclado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Fila 1 del teclado -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnQ"
                style="@style/botonesLetras"
                android:text="Q" />

            <Button
                android:id="@+id/btnW"
                style="@style/botonesLetras"
                android:text="W" />

            <Button
                android:id="@+id/btnE"
                style="@style/botonesLetras"
                android:text="E" />

            <Button
                android:id="@+id/btnR"
                style="@style/botonesLetras"
                android:text="R" />

            <Button
                android:id="@+id/btnT"
                style="@style/botonesLetras"
                android:text="T" />

            <Button
                android:id="@+id/btnY"
                style="@style/botonesLetras"
                android:text="Y" />

            <Button
                android:id="@+id/btnU"
                style="@style/botonesLetras"
                android:text="U" />

            <Button
                android:id="@+id/btnI"
                style="@style/botonesLetras"
                android:text="I" />

            <Button
                android:id="@+id/btnO"
                style="@style/botonesLetras"
                android:text="O" />

            <Button
                android:id="@+id/btnP"
                style="@style/botonesLetras"
                android:text="P" />
        </LinearLayout>

        <!-- Fila 2 del teclado -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnA"
                style="@style/botonesLetras"
                android:text="A" />

            <Button
                android:id="@+id/btnS"
                style="@style/botonesLetras"
                android:text="S" />

            <Button
                android:id="@+id/btnD"
                style="@style/botonesLetras"
                android:text="D" />

            <Button
                android:id="@+id/btnF"
                style="@style/botonesLetras"
                android:text="F" />

            <Button
                android:id="@+id/btnG"
                style="@style/botonesLetras"
                android:text="G" />

            <Button
                android:id="@+id/btnH"
                style="@style/botonesLetras"
                android:text="H" />

            <Button
                android:id="@+id/btnJ"
                style="@style/botonesLetras"
                android:text="J" />

            <Button
                android:id="@+id/btnK"
                style="@style/botonesLetras"
                android:text="K" />

            <Button
                android:id="@+id/btnL"
                style="@style/botonesLetras"
                android:text="L" />
        </LinearLayout>

        <!-- Fila 3 del teclado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/btnEnter"
                style="@style/botonesLetras"
                android:layout_width="48dp"
                android:layout_weight="1"
                android:text="✔️" />

            <Button
                android:id="@+id/btnZ"
                style="@style/botonesLetras"
                android:layout_width="19dp"
                android:layout_weight="1"
                android:text="Z" />

            <Button
                android:id="@+id/btnX"
                style="@style/botonesLetras"
                android:layout_width="19dp"
                android:layout_weight="1"
                android:text="X" />

            <Button
                android:id="@+id/btnC"
                style="@style/botonesLetras"
                android:layout_width="19dp"
                android:layout_weight="1"
                android:text="C" />

            <Button
                android:id="@+id/btnV"
                style="@style/botonesLetras"
                android:layout_weight="1"
                android:layout_width="19dp"
                android:text="V" />

            <Button
                android:id="@+id/btnB"
                style="@style/botonesLetras"
                android:layout_weight="1"
                android:layout_width="19dp"
                android:text="B" />

            <Button
                android:id="@+id/btnN"
                style="@style/botonesLetras"
                android:layout_weight="1"
                android:layout_width="19dp"
                android:text="N" />

            <Button
                android:id="@+id/btnM"
                style="@style/botonesLetras"
                android:layout_weight="1"
                android:layout_width="19dp"
                android:text="M" />

            <Button
                android:id="@+id/btnBorrar"
                style="@style/botonesLetras"
                android:layout_width="53dp"
                android:layout_weight="1"
                android:text="🗑️" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
